@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}
<div class="modal-dialog text-center">
    <div class="col-sm-8  main-section">
        <div class="modal-content">
            <div class="div col-12  user-img">
                <img src="~/Images/avatar_2x.png" alt="Avatar" />
            </div>           
            <form class="form-horizontal" id="capturadatos" method="post">             
               <div class="alert-danger" style="display: none;" id="Retorno">
                    <span class="text-center font-weight-bold"></span>
               </div>               
                <div class="form-group form-input" id="usuario">                   
                    <input  class="form-control" placeholder="Nombre de Usuario" />                   
                </div>
                <div class="form-group form-input" id="password-user">
                    <input  type="password" class="form-control" placeholder="Contraseña" />                   
                </div>
                <button asp-page-handler="Login" class="btn btnIngresar" onclick="Btn_clik(Load_)"><i class="fas fa-sign-out-alt"></i> Ingresar</button>
            </form>
            <div class="col-12 forgot">
                <a href="#">Recordar Contraseña</a>
            </div>
        </div>
    </div>
</div>
